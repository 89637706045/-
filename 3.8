#include<stdio.h>
#include<stdlib.h>
#include<math.h>
int main()
{
	float a=0, b=0, a1=a, b1=b, x=0, prod=1, znachenye[3], c=0, znach=0;
	puts("Vvedite znaychenia konstov otrezka, snachalo min, a potom max");
	scanf("%f%f", &a, &b);
	/*printf("%f %f\n", a, b);*/
	// rasschet"
	znach=pow(10, -10);
	znachenye[0]=tan(a)-a;
	znachenye[1]=tan(b)-b;
	a1=a;
	b1=b;
	while(prod==1)
	{
		c=a1+((b1-a1)/2);
		znachenye[2]=tan(c)-c;
		if(znachenye[0]*znachenye[2]<0)
		{
			b1=c;
			puts("Otlad1");
		}
		else
		{
			a1=c;
			puts("Otlad2");
		}
		if((abs(b1-a1))<=znach)
		{
			prod=0;
			puts("Otlad3");	
		}
	}
	x=tan(c)-c;
	printf("%f", x);
	return 0;
}
