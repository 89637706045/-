#include<stdio.h>

int main()
{
	puts("Vvedite chislo");
	int n;
	scanf("%i", &n);
	if(n>0)
	{
		for(int i=2; i<n; i++)
		{
			if(n%i==0)
			{
				puts("NO");
				return 0;
			}
		}
		puts("YES");
	}
	else if(n<0)
	{
		for(int i=-2; i>n; i--)
		{
			if(n%i==0)
			{
				puts("NO");
				return 0;
			}
		}
		puts("YES");
	}
	else//n==0
	{
		puts("NO");
	}
	return 0;
}
